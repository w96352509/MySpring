<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<bean id="author1" scope="singleton" class="com.study.spring.Author">
<property name="name" value="徐"></property>
<property name="sex" value="男"></property>
<property name="age" value="21"></property>
</bean>
<bean id="author2" class="com.study.spring.Author">
<constructor-arg value="女" index="1"></constructor-arg>
<constructor-arg value="A" index="0"></constructor-arg>
<constructor-arg value="20" index="2"></constructor-arg>
</bean>

<bean id="author3" class="com.study.spring.Author"
p:name="piko" p:sex="女" p:age="18">
</bean>
<bean id="author4" class="com.study.spring.Author"
c:name="miko" c:age="20" c:sex="女">
</bean>
<bean id="book1" class="com.study.spring.Book">
<property name="name" value="Java"></property>
<property name="price" value="100"></property>
<property name="author" ref="author1"></property>
</bean>
<bean id="book2" class="com.study.spring.Book">
<constructor-arg value="Python"></constructor-arg>
<constructor-arg value="200"></constructor-arg>
<constructor-arg ref="author2"></constructor-arg>
</bean>
<bean id="book3" class="com.study.spring.Book"
p:name="miko" p:price="300" p:author-ref="author3"
/>
<bean id="book4" class="com.study.spring.Book"
c:name="miko" c:price="400" c:author-ref="author3"
/>

<bean id="wife" class="com.study.spring.Wife"
p:name="miko" p:husband-ref="husband"
></bean>
<bean id="husband" class="com.study.spring.Husband"
p:name="peko" p:wife-ref="wife"/>

</beans>
